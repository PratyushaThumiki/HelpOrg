<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView

        android:id="@+id/scheme"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardElevation="1dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/scholarship" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:text="@string/schemes_scholarship"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fav1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:layout_alignEnd="@+id/imp_title"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignRight="@+id/imp_title"
                android:focusable="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/health"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardElevation="1dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="156dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="138dp">

            <ImageView
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/healthcare" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:text="@string/healthcare"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fav2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/imp_title"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imp_title"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ic_favorite_border_black_24dp"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>